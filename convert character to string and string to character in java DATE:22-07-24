  class CharStringConversion {

  public static void main(String[] args) {
        char ch = 'X';
    String str1 = String.valueOf(ch);  
    String str2 = Character.toString(ch); 
    System.out.println("Character: " + ch);
    System.out.println("String using String.valueOf(): " + str1);
    System.out.println("String using Character.toString(): " + str2);

    
    String name = "Java";
    char firstChar = name.charAt(0);

    System.out.println("\nOriginal String: " + name);
    System.out.println("First character: " + firstChar);  
  }
}
